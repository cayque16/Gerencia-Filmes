<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:id="@+id/teste"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/list_adapter_caixa_posicao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/jaVisto">

            <TextView
                android:id="@+id/list_adapter_posicao_ano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="001"
                android:textColor="#fff"
                android:layout_margin="3dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/list_adapter_poster"
            android:layout_width="48dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:src="@drawable/img_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_adapter_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terminator Salvation"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/list_adapter_ano"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2009" />

                <TextView
                    android:id="@+id/list_adapter_duracao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="115 min" />


                <TextView
                    android:id="@+id/list_adapter_inedito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="InÃ©dito" />

                <TextView
                    android:id="@+id/list_adapter_nota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="IMDB: 6.6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/list_adapter_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="assistido em 13 de ago de 2018" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>